.topic-list-item {
  height: 168rpx;
  overflow: hidden;
  position: relative;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 10000;
  position: fixed;
  top: 0px;
  width: 100%;
}

.cover {
  width: 100%;
  height: 168rpx; 
  position: absolute;
  filter: saturate(180%) blur(35px); 
}

.topic-content-brief {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 69%;
  transform: translate(-50%,-50%);
  z-index: 2;
  text-align: center;
}

.topic-content-brief text {
  font-size: 16px;
  line-height: 1.6;
  color: #fff;
}

/* 搜索列表 */

.topic-content-title text {
  font-size: 18px;
  font-weight: 500;
  line-height: 1.6;
  color: #fff;
}

.searchKey {
  color: #121b23;
}

.search-tips {
  font-size: 10px;
}
